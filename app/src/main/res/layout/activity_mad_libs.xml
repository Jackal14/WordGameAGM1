                    <TextView
                        android:id="@+id/adj1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white"
                        android:text="@string/adjective"
